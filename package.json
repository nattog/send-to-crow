{
	"name": "send-to-crow",
	"publisher": "nattog",
	"displayName": "Send To Crow",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:sendToCrow.toggleActiveKeybindings",
		"onCommand:sendToCrow.sendSelection"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "sendToCrow.toggleActiveKeybindings",
				"title": "Send To Crow: Toggle keybindings"
			},
			{
				"command": "sendToCrow.sendSelection",
				"title": "Send To Crow: Send selected text to crow"
			}
		],
		"keybindings": [
			{
				"command": "sendToCrow.sendSelection",
				"key": "ctrl+enter",
				"mac": "cmd+enter",
				"when": "editorLangId == lua && sendToCrow:isActive"
			}
		]
	},
	"scripts": {
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.59.0",
		"@types/ws": "^7.4.7",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"esbuild": "^0.12.24",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"ws": "^8.2.1"
	}
}
